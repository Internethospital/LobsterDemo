<?xml version="1.0" encoding="utf-8"?>
<viewform> 
	<winform name="frmBookManager" text="Books" size="880,500" enabled="true"  windowstate="maximized">
		<panel type="panel" enabled="true" dock="right" size="200,400" location="600,0">
			<label type="label" text="书籍名称" textalign="topleft" location="14,24" size="65,12"></label>
			<input type="textbox" name="txtBookName" text="人月神话" anchor="top,left" location="16,40" size="152,21" tabindex="0"></input>
			<label type="label" text="购买价格" textalign="topleft" location="14,71" size="65,12"></label>
			<input type="textbox" name="txtPrice" text="" anchor="top,left" location="16,87" size="152,21" tabindex="0"></input>
			<label type="label" text="购买日期" textalign="topleft" location="14,120" size="65,12"></label>
			<input type="dateTimePicker" name="txtDate" value="2018-04-01" customformat="yyyy-MM-dd" anchor="top,left" location="16,135" size="152,21" tabindex="0"></input>
			<input type="checkbox" name="ckBack" text="是否丢失" textalign="topleft" anchor="top,left" location="16,181" size="72,16" tabindex="0" checked="true" checkaligh="middleleft"></input>
			<button type="button" name="btnCancel"  text="取消" location="16,214" size="75,23"></button>
			<button type="button" name="btnSave"  text="保存" location="95,214" size="75,23"></button>
		</panel>
		<panel type="panel" enabled="true" dock="fill" size="600,400" location="0,0">
			<tool dock="top">
				<toolitem name="btnadd" type="toolStripButton" text="新增" displaystyle="imageandtext"></toolitem>
				<toolitem name="btnalter" type="toolStripButton" text="修改" displaystyle="imageandtext"></toolitem>
				<toolitem name="btndelete" type="toolStripButton" text="删除" displaystyle="imageandtext"></toolitem>
				<toolitem name="btnclose" type="toolStripButton" text="退出" displaystyle="imageandtext"></toolitem>
			</tool>
			<datagrid name="gridbooks" type="datagridview" dock="fill" location="0,25" size="600,400" readonly="true">
				<column name="column1" type="datagridtextbox" headertext="编码" miniwidth="50" width="100" autosizemode="notset" datapropertyname="Id"></column>
				<column name="column2" type="datagridtextbox" headertext="书籍名称" miniwidth="50" width="100" autosizemode="fill" datapropertyname="BookName"></column>
				<column name="column3" type="datagridtextbox" headertext="购买时间" miniwidth="50" width="100" autosizemode="notset" datapropertyname="BuyPrice"></column>
				<column name="column4" type="datagridtextbox" headertext="购买价格" miniwidth="50" width="100" autosizemode="notset" datapropertyname="BuyDate"></column>
				<column name="column5" type="datagridcheckbox" headertext="是否丢失" miniwidth="50" width="100" autosizemode="notset" datapropertyname="Flag" FalseValue="0" TrueValue="1"></column>
			</datagrid>
		</panel>
	</winform>
</viewform>